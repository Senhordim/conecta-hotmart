<%= simple_form_for @rule_association, :html => { :class => "form-vertical" },
  wrapper_mappings: {
    check_boxes: :vertical_radio_and_checkboxes,
    radio_buttons: :vertical_radio_and_checkboxes,
    file: :vertical_file_input,
    boolean: :vertical_boolean
  } do |f| %>

  <div class="col-sm-7">
    <%= f.input :activation_rule_id, collection: @activation_rules, as: :radio_buttons %>
    <%= f.input :mailchimp_actuation_rule_id, collection: @mailchimp_actuation_rules, as: :check_boxes %>

    <%= f.submit nil, :class => 'btn btn-primary', value: 'Update' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              activation_rules_path, :class => 'btn btn-default' %>
  </div>
<% end %>