<div class="page-header">
  <h1><%=t 'api.rule.rule_associations' %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped" id='data_table'>
    <thead>
      <tr>
        <th>Regra Hotmart</th>
        <th>Regras Mailchimp</th>
        <th class="col-sm-2"><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>

    <tbody>
      <% @activation_rules.each do |ac_rule| %>
        <% unless ac_rule.mailchimp_actuation_rules.blank? %>
          <tr>
            <td><%= ac_rule.name %></td>
            <td>
              <% ac_rule.mailchimp_actuation_rules.each do |mc_rule| %>
                <%= mc_rule.name %> <br />
              <% end %>
            </td>
            <td>
              <%= link_to t('.show', default: t("helpers.links.show")),
                          rule_association_path(ac_rule), class: 'btn btn-success btn-xs'  %>
              <%# link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_activation_rule_path(rule), :class => 'btn btn-default btn-xs' %>
              <%# link_to t('.destroy', :default => t("helpers.links.destroy")), rule,
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div

<br>

