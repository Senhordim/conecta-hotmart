<div class="page-header">
  <h1>Log</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped" id='data_table'>
    <thead>
      <tr>
        <th>Regra Hotmart</th>
        <th>Retorno Mailchimp</th>
        <th>Data</th>
        <th class="col-sm-2"><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>

    <tbody>
      <% @logs.each do |rule| %>
        <tr>
          <td><%= rule.activation_rule.name %></td>
          <td><%= simple_format rule.mailchimp_response %></td>
          <td><%= rule.created_at.strftime("%d/%m/%Y - %H:%M:%S") %></td>
          <td>
            <%= link_to 'Exibir notificação',
                        rule, class: 'btn btn-success btn-xs'  %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")), rule,
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div

<br />
