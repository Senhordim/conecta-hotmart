<div class="page-header">
  <h1>Notificações</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped" id='data_table'>
    <thead>
      <tr>
        <th>Regra Hotmart</th>
        <th>Retorno Mailchimp</th>
        <th>Data</th>
        <th class="col-sm-2">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @logs.each do |log| %>
        <tr>
          <td><%= log.activation_rule.nil? ? 'Nenhuma regra ativada' : log.activation_rule.name %></td>
          <td><%= simple_format log.mailchimp_response %></td>
          <td><%= log.created_at.strftime("%d/%m/%Y - %H:%M:%S") %></td>
          <td>
            <%= link_to 'Exibir', log, class: 'btn btn-success btn-xs'  %>
            <%= link_to 'Excluir', log,
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div

<br />
