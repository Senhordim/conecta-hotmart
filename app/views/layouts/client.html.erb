<!DOCTYPE html>
<html>
  <head>
    <title>Script</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav class="navbar navbar-inverse" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu_links">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to(image_tag("e-editora_logo.png", :alt => "E-Editora", id: :logo ), root_path) %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="menu_links">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= current_user.name %> <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class="container-fluid">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == 'notice' ? "success" : "danger" %>">
          <a class="close" data-dismiss="alert">Ã—</a>
          <%= msg %>
        </div>
      <% end %>

      <div class="row">
        <div class="col-sm-3">
          <ul class='nav nav-sidebar'>
            <li class=<%= 'active' if is_active?('api_keys') %>>
              <%= link_to t('api.integration'), edit_hotmart_api_key_path(current_user.hotmart_api_key.first.id) %>
            </li>
            <li class=<%= 'active' if is_active?('activation_rules') %>>
              <%= link_to t('api.rule.rules'), activation_rules_path %>
            </li>
            <li class=<%= 'active' if is_active?('mailchimp_actuation_rules') %>>
              <%= link_to t('api.rule.mailchimp_actuation_rules'), mailchimp_actuation_rules_path %>
            </li>
            <li class=<%= 'active' if is_active?('rule_associations') %>>
              <%= link_to t('api.rule.rule_associations'), rule_associations_path %>
            </li>
            <li class=<%= 'active' if is_active?('notifications') %>>
              <%= link_to t('api.rule.notification.logs'), notifications_path %>
            </li>
          </ul>
        </div>
        <div class="col-sm-9">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
